
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model WebApplication7.Models.LoginModel
<!-- Section Area - Content Central -->
<section class="content-info">

    <div class="container paddings">
        <!-- Content Text-->
        <div class="panel-box block-form">
            <div class="titles text-center">
                <h4>ĐĂNG NHẬP</h4>
            </div>

            <div class="info-panel">     

                @Html.ValidationSummary(true, null, new { @class = "alert-danger col-12 mx-auto text-center" })       

                @using (Html.BeginForm(FormMethod.Post))
                {
                <div class="form-horizontal form-theme padding-top-mini">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label class="control-label col-sm-2">Tài khoản</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.UserName, new { @type = "text", @class = "form-control", @placeholder = "Nhập tài khoản", @required = "" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2">Mật khẩu</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.Password, new { @type = "password", @class = "form-control", @placeholder = "Nhập mật khẩu", @required = "" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="offset-sm-2 col-sm-10">
                            <button type="submit" class="bnt btn-iw">Đăng nhập</button>
                        </div>
                    </div>
                </div>
                    
                }
            </div>

        </div>
        <!-- End Content Text-->
    </div>
</section>
<!-- End Section Area -  Content Central -->
